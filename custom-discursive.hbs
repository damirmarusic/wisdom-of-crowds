<div class="main-container homepage">
    <!-- Normal Articles -->
    {{#post}}
    <section class="articles">
        <div id="discursive-title"><a href="{{@site.url}}/discursive/">discursive</a></div>
        <div class="discourse">
            <div class="discourse-hero-holder">
                <figure class="discourse-single-image-container">
                    {{#if feature_image}}
                    <img class="discourse-single-image"
                        srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 750w"
                        sizes="(max-width: 750px) 750px, 300px"
                        src="{{img_url feature_image size="m"}}"
                        alt="{{title}}">
                    {{else}}
                    <img class="discourse-image" src="{{asset 'images/WoC-Square-trans.png'}}" alt="{{title}}">
                    {{/if}}
                </figure>

                <div class="discourse-title-meta-holder">
                    <span class="discourse-single-title"><a href="{{url}}">{{title}}</a></span>
                    <span class="discourse-meta">
                        Posted on {{date}} by <span class="discourse-byline">{{authors separator=" &amp; "}}</span> | Share: <a href="https://twitter.com/intent/tweet?via=wcrowdslive&url={{url absolute='true'}}"><i class="fab fa-twitter"></i></a>
                    </span>
                </div>
            </div>
            <hr/>
            <span class="discourse-body">
                {{content}}
            </span>
        </div>
    </section>
    {{/post}}
    {{> sidebar-discursive}}
</div>