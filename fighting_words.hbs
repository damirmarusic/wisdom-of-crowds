<div class="main-container index">
    <!-- Normal Articles -->
    <section class="articles">
        <div id="discursive-title"><a href="{{@site.url}}/fighting_words/">Fighting Words</a></div>
        {{#foreach posts visibility="all"}}
        <div class="discourse">
            {{#if feature_image}}
            <figure class="discourse-feature-image-container">
                <img class="discourse-feature-image" 
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 750w"
                    sizes="(max-width: 750px) 750px, 300px"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{title}}">
            </figure>
            {{/if}}
            <div class="discourse-hero-holder">
                <figure class="discourse-image-container">
                    <img class="discourse-image" src="{{asset 'images/WoC-Square-trans.png'}}" alt="{{title}}">
                </figure>

                <div class="discourse-title-meta-holder">
                    <span class="discourse-title"><a href="{{url}}">{{title}}</a></span>
                    <span class="discourse-meta">
                        <span class="discourse-byline">{{authors separator=" &amp; "}}</span> | {{date}} | 0 Comments | <a href="https://twitter.com/intent/tweet?via=wcrowdslive&url={{url absolute='true'}}"><i class="fab fa-twitter"></i></a>
                    </span>
                </div>
            </div>
            <hr/>
            <span class="discourse-body">
                {{content}}
            </span>
        </div>
        <div class="discourse-divider">&nbsp;</div>
        {{/foreach}}
        {{pagination}}
    </section>
    {{> sidebar-fighting_words}}
</div>