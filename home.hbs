{{> hero}}
<div class="main-container homepage">
    <!-- Normal Articles -->
    <section class="articles">
        {{#foreach posts visibility="all" from="2" to="8"}}
        <div class="article">
            {{#if feature_image}}
            <figure class="article-image-container">
                <img class="article-image" 
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 750w"
                    sizes="(max-width: 750px) 750px, 300px"
                    src="{{img_url feature_image size="s"}}"
                    alt="{{title}}">
            </figure>
            {{/if}}
            <div class="article-text">
                <span class="article-title"><a href="{{url}}">{{title}}</a></span>
                <span class="article-blurb">
                    {{#if meta_description}}
                        {{meta_description}}
                    {{else}}
                        {{excerpt}}
                    {{/if}}
                </span>
                <span class="article-byline">{{authors separator=" &amp; "}}</span>
                <span class="meta">
                    <span class="article-tags">
                    {{#foreach tags}}
                    <span class="tag">
                        <a href="/{{slug}}/">{{name}}</a>
                    </span>
                    {{/foreach}}
                    {{#has visibility="paid"}}
                        <span class="tag member">Members Only</span>
                    {{/has}}
                    </span>
                    <div class="published">{{date published_at format="MMMM DD, YYYY"}} | <span data-cove-count-comments="{{id}}"></span></div>
                </span>
            </div>
        </div>
        {{/foreach}}
        {{pagination}}
    </section>
    {{> sidebar}}
</div>