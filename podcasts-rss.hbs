<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:wfw="http://wellformedweb.org/CommentAPI/"
    xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
    xmlns:slash="http://purl.org/rss/1.0/modules/slash/" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd"
    xmlns:rawvoice="http://www.rawvoice.com/rawvoiceRssModule/" xmlns:googleplay="http://www.google.com/schemas/play-podcasts/1.0">

<channel>
<title>{{@site.title}} - Subscriber-Only Episodes</title>
<link>{{@site.url}}</link>
<description>Wisdom of Crowds subscriber-only episode feed.</description>
<language>{{@site.locale}}</language>
<copyright>{{@site.title}} Copyright {{date format="YYYY"}}</copyright>
<atom:link href="{{@site.url}}/podcasts/rss-members/" rel="self" type="application/rss+xml" />
<lastBuildDate>{{date format="ddd, DD MMM YYYY HH:mm:ss ZZ"}}</lastBuildDate>
<itunes:author>{{@site.title}}</itunes:author>
<itunes:summary>{{@site.description}}</itunes:summary>
<itunes:owner>
    <itunes:name>Wisdom of Crowds</itunes:name>
    <itunes:email>wisdomcrowdspod@gmail.com</itunes:email>
</itunes:owner>
<itunes:explicit>clean</itunes:explicit>
<itunes:image href="{{img_url @site.icon absolute="true"}}"/>
<itunes:category text="Politics"></itunes:category>

{{#get "posts" filter="tag:podcasts" include="tags,authors" as |episode|}}
    {{#foreach episode visibility="paid"}}
    <item>
        <title>{{title}}</title>
        <link>{{url absolute="true"}}</link>
        <pubDate>{{date format="ddd, DD MMM YYYY HH:mm:ss ZZ"}}</pubDate>
        <guid isPermaLink="false">{{id}}</guid>
        <category><![CDATA[ Politics ]]></category>
        <description>{{custom_excerpt}}</description>
        <content:encoded><![CDATA[ {{custom_excerpt}} ]]></content:encoded>
        <enclosure url="{{og_description}}" length="0" type="audio/mpeg"/>
        <itunes:summary><![CDATA[ {{custom_excerpt}} ]]></itunes:summary>
    </item>
    {{/foreach}}
{{/get}}

</channel>
</rss>